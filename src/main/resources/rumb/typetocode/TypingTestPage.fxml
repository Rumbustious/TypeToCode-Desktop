<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1"  fx:controller="rumb.typetocode.TypingTestController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>

    <!-- Main content layout -->
    <VBox alignment="CENTER" minHeight="600.0" minWidth="600.0" spacing="20">
        <!-- Title -->
        <Text styleClass="header-text" text="Typing Speed Test">
            <font>
                <Font size="24.0" />
            </font>
        </Text>

        <!-- Text to Type -->
        <Label fx:id="textToTypeLabel" styleClass="typing-text" text="This is the text you need to type. Try to be as fast and accurate as you can!" wrapText="true" />
        <!-- Typing Area -->
        <TextArea fx:id="typingArea" prefHeight="39.0" prefWidth="577.0" promptText="Type here" wrapText="true"  />

        <!-- Buttons -->
        <HBox alignment="CENTER" spacing="15">
            <Button fx:id="startButton" styleClass="action-button" text="Start" onAction="#handleStartButton"/>
            <Button fx:id="submitButton" styleClass="action-button" text="Submit" onAction="#handleSubmitButton"/>
        </HBox>
      <padding>
         <Insets left="10.0" right="10.0" />
      </padding>
    </VBox>


</AnchorPane>
