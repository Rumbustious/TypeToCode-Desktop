<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="rumb.typetocode.MainMenuController">
   <stylesheets>
      <URL value="@styles.css" />
   </stylesheets>
      <!-- Center content -->
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20">
         <ImageView fitHeight="108.0" fitWidth="349.0" pickOnBounds="true" preserveRatio="true">
               <Image url="@logo.png" />
         </ImageView>

         <!-- Welcome message -->
         <Text styleClass="welcome-message" text="Welcome to your coding assistant">
            <font>
               <Font size="20.0" />
            </font>
         </Text>

         <!-- Buttons -->
         <VBox alignment="CENTER" spacing="10">
            <Button styleClass="menu-button" text="Start Typing Test" fx:id="typingTestButton" onAction="#handleTypingTestClick" />
            <Button prefHeight="43.0" prefWidth="121.0" styleClass="menu-button" text="Tutorial" />
            <Button prefHeight="42.0" prefWidth="122.0" styleClass="menu-button" text="Settings" />
         </VBox>
      </VBox>

      <!-- GitHub Icon in the bottom left corner -->
      <ImageView fx:id="githubIcon" fitHeight="24.0" fitWidth="24.0" layoutX="25.0" layoutY="361.0" pickOnBounds="true" preserveRatio="true">
         <Image url="@github-icon.png" />
      </ImageView>
</AnchorPane>
